{
  "name": "static-site-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for starting a static site project",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prebuild": "rm -rf dist/*",
    "build": "parcel build index.html --public-url ./",
    "prewatch": "rm -rf dist/*",
    "watch": "parcel index.html",
    "prerelease": "npm run build"
  },
  "author": "Kenneth Lim <limzy.kenneth@gmail.com> (https://limzykenneth.com)",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "less": "^3.10.3",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "posthtml-favicons": "^1.3.0"
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "../results",
        "staticOutDir": "assets/results"
      }
    ],
    "watcherGlob": "**"
  }
}
